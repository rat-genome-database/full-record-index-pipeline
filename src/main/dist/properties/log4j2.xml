<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="core" append="true" fileName="logs/core.log" filePattern="logs/core.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="%d %p [%c] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <File name="incoming" append="false" fileName="logs/incoming.log">
            <PatternLayout pattern="%m%n"/>
        </File>
        <RollingFile name="inserted" append="true" fileName="logs/inserted.log" filePattern="logs/inserted.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="deleted" append="true" fileName="logs/deleted.log" filePattern="logs/deleted.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="spring" append="true" fileName="logs/spring.log" filePattern="logs/spring.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="core" level="info" additivity="false">
            <AppenderRef ref="core"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="incoming" level="debug" additivity="false">
            <AppenderRef ref="incoming"/>
        </Logger>
        <Logger name="inserted" level="debug" additivity="false">
            <AppenderRef ref="inserted"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="deleted" level="debug" additivity="false">
            <AppenderRef ref="deleted"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="spring"/>
            <AppenderRef ref="Console" level="warn"/>
        </Logger>
    </Loggers>
</Configuration>